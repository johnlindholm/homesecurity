<?xml version="1.0" encoding="ISO-8859-1"?>
<service type="camera" name="Camera_1" version="1.0">
    <requests>
        <request name="takePicture">
            <params>
                <param name="width_res" type="integer"/>
                <param name="height_res" type="integer"/>
            </params>
            <response>
                <params>
                    <param name="picture" type="binary"/>
                    <param name="timestamp" type="timestamp"/>
                </params>
            </response>
        </request>
        <request name="startStream">
            <params>
                <param name="width_res" type="integer"/>
                <param name="height_res" type="integer"/>
                <param name="duration" type="integer"/>
            </params>
            <response>
                <params>
                    <param name="success" type="boolean"/>
                </params>
            </response>
        </request>
        <request name="stopStream">
            <response>
                <params>
                    <param name="success" type="boolean"/>
                </params>
            </response>
        </request>
        <request name="isStreaming">
            <response>
                <params>
                    <param name="streaming" type="boolean"/>
                </params>
            </response>
        </request>
    </requests>
</service>